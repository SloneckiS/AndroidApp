<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3F3939">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/bdk_logo"
            app:srcCompat="@drawable/bdk_logo" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewHeader"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="C.H. Manufaktura, ul. Drewnowska 58, 91- 002 Łódź"
            android:textSize="22sp"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="146dp"
            android:text="Restauracja Berlin Döner Kebap"
            android:textColor="#881F1F"
            android:textSize="26sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewHeader"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="tel. 883462712"
            android:textSize="22sp"
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/button_map"
            android:layout_width="113dp"
            android:layout_height="150dp"
            android:layout_above="@+id/textViewHeader"
            android:layout_below="@+id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="-120dp"
            android:background="#881F1F"
            android:minHeight="60dp"
            android:text="Sprawdź na mapie!"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:backgroundTint="#881F1F" />


        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <!-- menu bar -->
            <include layout="@layout/footer" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
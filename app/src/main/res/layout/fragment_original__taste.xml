<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:layout_width='match_parent'
            android:layout_height="wrap_content"
            android:src="@drawable/originaltaste"
            android:scaleType="center"
            />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/wolowina"
            app:srcCompat="@drawable/wolowina" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="Do przygotowywanych potraw, możesz wybrać 100% MIĘSO WOŁOWE, pochodzące od starannie wyselekcjonowanych dostawców - czegoś takiego skosztujesz tylko u nas!"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/kurczak"
            app:srcCompat="@drawable/kurczak" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginRight="-4dp"
            android:text="Wyznaczamy nowe trendy dotyczące jeszcze zdrowszego mięsa kebabowego. Dlatego w naszym mięsie z kurczaka próżno szukać antybiotyków czy GMO!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/warzywa"
            app:srcCompat="@drawable/warzywa" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginRight="-4dp"
            android:text="Codziennie kroimy warzywa pojawiające się w Twoich daniach po to, abyś mógł zawsze cieszyć się ich świeżością"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/sosy"
            app:srcCompat="@drawable/sosy" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="25dp"
            android:text="Co decyduje o wyjątkowości naszych nowych sosów? Ich unikalna, dopracowana receptura, której nie znajdziesz nigdzie indziej. Poznaj ich smak!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <!-- menu bar -->
            <include layout="@layout/footer" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
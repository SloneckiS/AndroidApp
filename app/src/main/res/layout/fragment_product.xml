<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/ivproductd"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/titlePro"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivproductd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="21dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/pDesc"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlePro"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text=""
            android:textColor="#000"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView222"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/chicken"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/pDesc"
            />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/chickendesc"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pDesc"
            android:layout_alignLeft="@id/imageView222"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="KURCZAK - bez antybiotyków i GMO, dla wszystkich odżywiających się nie tylko zdrowo, ale i świadomie"
            android:textColor="#919191"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView333"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/cow"
            android:layout_marginTop="110dp"
            android:layout_below="@+id/pDesc"
            />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/cowdesc"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pDesc"
            android:layout_alignLeft="@id/imageView333"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="100% WOŁOWINA - wyselekcjonowane, najlepszej jakości mięso wołowe"
            android:textColor="#919191"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginBottom="35dp"/>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cowdesc"
            android:orientation="vertical">
            <!-- menu bar -->
            <include layout="@layout/footer" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>